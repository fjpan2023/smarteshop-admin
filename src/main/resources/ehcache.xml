<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.smarteshop.domain.User" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Authority" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Product" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Product.skuses" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Product.relatedProducts" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Brand" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Category" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Category.products" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Sku" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.RelatedProduct" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.EmailSetting" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Currency" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Customer" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Template" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Store" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.ContactPerson" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Comments" uses-template="simple"/>

    <cache alias="com.smarteshop.domain.Attachment" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
