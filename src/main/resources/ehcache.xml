<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
            />

    <cache name="com.smarteshop.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Product"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Product.skuses"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Product.relatedProducts"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Brand"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Category"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Category.products"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Sku"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.RelatedProduct"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.EmailSetting"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Currency"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Customer"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Template"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Store"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.ContactPerson"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Comments"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.smarteshop.domain.Attachment"
        timeToLiveSeconds="3600">
    </cache>

    <!-- jhipster-needle-ehcache-add-entry -->
</ehcache>
